{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node", "react"],
    "paths": {
      "@/lib/*": ["./lib/*"],
      "@/widgets/*": ["./src/widgets/*"]
    }
  },
  "include": ["src", "lib", "jest.config.js"],
  "exclude": ["node_modules", "dist", "**/*.test.tsx", "**/*.stories.tsx"]
}
